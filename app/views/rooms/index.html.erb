<p id="notice"><%= notice %></p>

<h1>Rooms</h1>

<table>
  <thead>
    <tr>
      <th>Room no</th>
      <th>No of bed</th>
      <th>Room type</th>
      <th>Room description</th>
      <th>Facilities</th>
      <th>Price</th>
      <th>Img url</th>
      <th>Place</th>
      <th>Hotel</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @rooms.each do |room| %>
      <tr>
        <td><%= room.room_no %></td>
        <td><%= room.no_of_bed %></td>
        <td><%= room.room_type %></td>
        <td><%= room.room_description %></td>
        <td><%= room.facilities %></td>
        <td><%= room.price %></td>
        <td><%= room.img_url %></td>
        <td><%= room.place_id %></td>
        <td><%= room.hotel_id %></td>
        <td><%= link_to 'Show', room %></td>
        <td><%= link_to 'Edit', edit_room_path(room) %></td>
        <td><%= link_to 'Destroy', room, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

