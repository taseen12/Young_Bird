<% if notice %>
  <aside id="notice"><%= notice %></aside>
<% end %>


<div class="container">

  <div class="row">
    <% @packages.each do |package| %>

          <div class="col-md-4  d-flex flex-column  align-items-center">
            <div class="pack_image border border-primary w-100 h-100">

              <%= image_tag(package.img_url, :class => "w-100 h-100") %>
            </div>
            <h2><%= package.package_no %></h2>
            <h2><%= package.package_name %></h2>
            <div class="price">
              <p>Price : <%= number_to_currency(package.price) %></p>
            </div>
            <%= link_to 'Details',  user_packages_details_path(package_id: package) %>


          </div>




    <% end %>
  </div>

</div>