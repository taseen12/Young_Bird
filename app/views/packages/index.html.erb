<p id="notice"><%= notice %></p>

<h1>Packages</h1>

<table>
  <thead>
    <tr>
      <th>Package no</th>
      <th>Package name</th>
      <th>Pack description</th>
      <th>Facilities</th>
      <th>Price</th>
      <th>Img url</th>
      <th>Place</th>
      <th>Hotel</th>
      <th>Room</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @packages.each do |package| %>
      <tr>
        <td><%= package.package_no %></td>
        <td><%= package.package_name %></td>
        <td><%= package.pack_description %></td>
        <td><%= package.facilities %></td>
        <td><%= package.price %></td>
        <td><%= package.img_url %></td>
        <td><%= package.place_id %></td>
        <td><%= package.hotel_id %></td>
        <td><%= package.room_id %></td>
        <td><%= link_to 'Show', package %></td>
        <td><%= link_to 'Edit', edit_package_path(package) %></td>
        <td><%= link_to 'Destroy', package, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Package', new_package_path %>
